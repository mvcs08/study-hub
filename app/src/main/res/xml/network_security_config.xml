<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Permitir cleartext apenas para seu IP específico (desenvolvimento) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.100.101</domain>
    </domain-config>

    <!-- Ou para todos os domínios (não recomendado para produção) -->
    <!-- <base-config cleartextTrafficPermitted="true" /> -->
</network-security-config>